<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Lab Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/main_900"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/imageLabIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_package"
                    android:tint="@color/main_50"
                    tools:ignore="UseAppTint" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/textProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Lab"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp"
                    tools:text="Package Lab" />

                <TextView
                    android:id="@+id/textProductDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 tables - 2 chairs"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    tools:text="2 tables - 2 chairs" />

            </LinearLayout>

            <!-- Remove Button -->
            <ImageButton
                android:id="@+id/buttonRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:tint="@color/main_900"
                android:contentDescription="Delete from cart"
                tools:ignore="UseAppTint" />

        </LinearLayout>

        <!-- Booking Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#F8F9FA"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“… Date:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textBookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/06/2025"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        tools:text="25/06/2025" />

                </LinearLayout>

                <!-- Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â° Duration:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textBookingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00 - 10:00"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        tools:text="08:00 - 10:00" />

                </LinearLayout>

                <!-- Facilities Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥ Facilities:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scrollbars="none"
                        android:fillViewport="true"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textFacilities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="N/A" />

                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000Ä‘"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/main_800"
                tools:text="500.000Ä‘" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>